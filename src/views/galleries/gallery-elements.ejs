<div class="galleries-list">
    <% for (const gallery of data) { %>
    <div class="gallery-element">
        <h3 class="gallery-title"><%=gallery.name %></h3>
        <div class="gallery-description">
            <%= gallery.description %>
        </div>
        <div class="gallery-images">
            <% for (const img of gallery.images) {%>
            <img src="/img_galleries/<%=img%>" alt="obraz do galerii <%=img%>" class="gall-image">
            <% }%>
        </div>
        <div class="button-wrapper">
            <a href="edit/<%= gallery._id %>" class="btn edit">Edytuj</a>
            <button class="btn remove" data-element="<%= gallery._id %>">Usu≈Ñ</button>
        </div>
    </div>
    <% } %>

</div>
